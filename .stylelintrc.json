{
  "extends": "stylelint-config-recommended-scss",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "function",
          "if",
          "error",
          "return",
          "each",
          "use"
        ]
      }
    ]
  }
}
